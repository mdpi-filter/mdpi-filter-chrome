{
  "manifest_version": 3,
  "name": "MDPI Filter",
  "version": "1.0",
  "description": "Hide or highlight MDPI publications in literature searches",
  "permissions": [
    "storage",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16":  "icons/icon-16.png",
      "48":  "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "MDPI Filter",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}

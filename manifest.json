{
  "manifest_version": 3,
  "name": "MDPI Filter",
  "version": "1.0",
  "description": "Hide or highlight MDPI publications in literature searches",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://www.google.com/*",
    "*://scholar.google.com/*",
    "*://pubmed.ncbi.nlm.nih.gov/*",
    "*://*.europepmc.org/*",
    "*://www.thelancet.com/*"
  ],
  "icons": {
    "16":  "icons/icon-16.png",
    "48":  "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16":  "icons/icon-16.png",
      "48":  "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "MDPI Filter"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*",
        "*://scholar.google.com/scholar*",
        "*://pubmed.ncbi.nlm.nih.gov/*",
        "*://*.europepmc.org/*",
        "*://www.thelancet.com/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
